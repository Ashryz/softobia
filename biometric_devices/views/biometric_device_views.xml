<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="biometric_device_search" model="ir.ui.view">
        <field name="model">biometric.device</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="serial_number"/>
                <filter name="online" string="Online" domain="[('state','=','online')]"/>
                <filter name="offline" string="Offline" domain="[('state','=','offline')]"/>
                 <separator/>
                <filter name="archived" string="Archived" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="biometric_device_tree" model="ir.ui.view">
        <field name="model">biometric.device</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="serial_number"/>
                <field name="location"/>
                <field name="last_sync"/>
                <field name="state" widget="badge" decoration-success="state=='online'"/>
            </list>
        </field>
    </record>

    <record id="biometric_device_form" model="ir.ui.view">
        <field name="model">biometric.device</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_test_connection"
                            type="object"
                            string="Test Connection"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="active" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="ip_address"/>
                            <field name="serial_number"/>
                        </group>
                        <group>
                            <field name="port"/>
                            <field name="location"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>